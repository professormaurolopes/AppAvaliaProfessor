<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MostraDados"
    android:orientation="vertical">


    <TextView
        android:id="@+id/lblMostraDadosDisciplinaTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Disciplina:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblMostraDadosDisciplinaConteudo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblMostraDadosProfessorTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Professor:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblMostraDadosProfessorConteudo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblMostraDadosAulaTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aula:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblMostraDadosAulaConteudo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/lblMostraDadosNotaTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nota:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblMostraDadosNotaConteudo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnConfirmaSalva"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirma Salva de Dados"
        android:onClick="gravarDados"/>

</LinearLayout>